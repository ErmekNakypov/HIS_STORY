<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<?import java.net.URL?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.newgame.HelloController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <MediaView fx:id="mediaView" fitWidth="1920" fitHeight="1080" />
        <VBox alignment="CENTER" spacing="20.0" fx:id="mainPane" visible="false" styleClass="main">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="HIS STORY" styleClass="title-label" />
            <Button text="Play" styleClass="play-button" onAction="#handlePlayButton" />
            <Button text="Exit" styleClass="exit-button" onAction="#handleExitButton" />
        </VBox>
    </children>
</StackPane>
